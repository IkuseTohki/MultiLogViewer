<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 複数行メッセージの表示用テンプレート -->
    <DataTemplate x:Key="MultilineMessageTemplate">
        <Grid Margin="2,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       Text="{Binding Message, Converter={StaticResource SingleLineMessageConverter}}"
                       TextTrimming="CharacterEllipsis" />
            <Path Grid.Column="1"
                  Width="12"
                  Height="12"
                  Margin="5,0,2,0"
                  VerticalAlignment="Center"
                  Data="{StaticResource MultilineIconGeometry}"
                  Fill="Gray"
                  Opacity="0.6"
                  Stretch="Uniform"
                  ToolTip="This entry contains multiple lines."
                  Visibility="{Binding Message, Converter={StaticResource MultilineToVisibilityConverter}}" />
        </Grid>
    </DataTemplate>

</ResourceDictionary>
